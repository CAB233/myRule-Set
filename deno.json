{
  "tasks": {
    "build": "deno run --allow-net --allow-write --allow-read build/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/toml": "jsr:@std/toml@^1.0.11"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always",
    "include": [
      "build/*.ts",
      "build/**/*.ts"
    ]
  }
}
